/* In navbar header */
#logo {
  text-shadow: 0 -1px 1px rgba(0,0,0,0.6);
  font-size: 1.7em;
  color: #00B6FF;
}

#logo:hover {
  color: #9A00EE;
}

.label {
  color: #00B6FF;;
  font-size: 1.1em;
}

.container {
  background-color: white;
}

.navbar {
  border: 0px solid white;
  margin-bottom: 5px;
}

#current_user_name {
  width: 450px;
  float: right;
  color: #00B6FF;
  margin-top: 13px;
}

#current_user_name img {
  width: 30px;
  height: 30px;
  -webkit-border-radius: 10px;
     -moz-border-radius: 10px;
       -o-border-radius: 10px;
          border-radius: 10px;
}

.navbar-inverse, .navbar-nav > li > a:focus, .navbar-inverse, .navbar-nav > li > a:hover {
  color: #00B6FF !important;
}

.navbar-inverse .navbar-link:hover, .navbar-inverse, .navbar-nav > li > a:focus, .navbar-inverse, .navbar-nav > li > a:hover {
  color: #00B6FF !important;
}

.user_email:hover {
  color: magenta;
}

#dropDown1.dropDown {
  width:250px;
  text-align:center;
  margin-bottom:10px;
  display: inline;
}
