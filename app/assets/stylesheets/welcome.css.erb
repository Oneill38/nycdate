/********* Welcome Page ***********/
div.item {
  background-color: white;
}

.carousel-caption .btn {
  background-color: black;
  color: #00B6FF;
}

.carousel-caption .btn:hover {
  color: #9A00EE;
}

.img-responsive, .thumbnail>img, .thumbnail a>img, .carousel-inner>.item>img, .carousel-inner>.item>a>img {
  margin: 0 auto;
}

.marketing {
  padding-top: 50px;
}

img.img-circle {
  display: block;
  margin: 0 auto;
  height: 160px;
  width: 160px;
}

.marketing img.img-circle:hover {
  -webkit-transform: scale(1.15, 1.15);
      -ms-transform: scale(1.15, 1.15);
          transform: scale(1.15, 1.15);
  border: 2px solid #00B6FF;
}

.marketing .row {
  width: 1100px;
  margin: 0 auto;
  padding-top: 25px;
  padding-bottom: 25px;
}

.marketing div.col-lg-4 {
  width: 350px;
}

.marketing .row p, .marketing .row h2 {
  text-align: center;
  display: block;
  margin: 0 auto;
}

/******** User's Profile Page ***********/
ul.profile {
  list-style-type: none;
}

ul.profile li {
  margin-left: -10px;
}
