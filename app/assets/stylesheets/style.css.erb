/******** General stylings ************/

body {
  font-family: "Raleway", Helvetica, Arial, sans-serif;
}

a {
  padding: 10px;
}

a:hover {
  color: #9A00EE;
}

h1 {
  text-shadow: 0 -1px 1px rgba(0,0,0,0.6);
}

h1 {
  text-shadow: 0 -1px 1px rgba(0,0,0,0.6);
}

h2, h3 {
  text-shadow: 0 -1px 1px rgba(0,0,0,0.6);
  text-align: center;
  color: #00B6FF;
}

.clear {
  clear: both;
}

#flash {
  position: relative;
  top: 250px;
  left: 160px;
}

input[type="text"], input[type="date"] {
  box-shadow: inset 0 1px 1px 0 rgba(0,0,0,0.08);
  background-color: #00B6FF;
}



.content {
   padding:3px;
    text-align:left;
    background:white;
}

/***** Background images for different pages ******/
#background_users {
  background-image: url('central_park.jpg');
  background-size: cover;
}

#background_users_show {
  background-image: url('nyc-aerial.jpg');
  background-size: cover;
}

#main {
  background-image: url('NewYork.jpg');
  background-size: cover;
}


#wrapper1 {
  width: 300px;
  height: 400px;
  position: relative;
  top: 100px;
  left: 130px;
}

/* Container div containers for every page except 'Welcome' */
.users_container {
  width: 700px;
  height: 800px;
  margin: 0 auto;
  opacity: 0.98;
  padding: 5px;
  background-color: navy;
}

#profile_page {
  width: 700px;
  height: 700px;
  margin: 0 auto;
  opacity: 0.85;
  padding: 5px;
  background-color: navy;
  color: white;
}

#profile_page span.label {
  color: #00B6FF;
}

#general_events .users_container {
  width: 700px;
  height: 650px;
  margin: 0px auto;
  opacity: 0.8;
  padding: 5px;
  background-color: navy;
}

label {
  color:white;
}

#main_div {
  width: 600px;
  margin: 0 auto;
}

#main_div_user {
  width: 600px;
  margin: 0 auto;
  padding: 20px;
}

#main_div_user ul {
  margin-left: -40px;
}

#main_div form {
  padding-top: 50px;
  width: 300px;
  margin: 0 auto;
}

#main_div form input {
  width: 180px;
  -webkit-border-radius: 10px;
     -moz-border-radius: 10px;
       -o-border-radius: 10px;
          border-radius: 10px;
}

#main_div form input[type="submit"] {
  width: 70px;
  color: #00B6FF;
  background-color: black;
}

#main_div form input[type="submit"]:hover {
  color: #9A00EE;
}

/* ----- Event Search Results Stylings ------*/
.results {
  position: relative;
  top: 50px;
  width: 600px;
  height: 700px;
  background-color: black;
  color: white;
  opacity: 0.9;
  margin: 0 auto;
  overflow: auto;
  -webkit-border-radius: 10px;
     -moz-border-radius: 10px;
       -o-border-radius: 10px;
          border-radius: 10px;
  -webkit-box-shadow: 0px 0px 15px 5px rgba(255, 255, 190, .75);
     -moz-box-shadow: 0px 0px 15px 5px rgba(255, 255, 190, .75);
         box-shadow: 0px 0px 15px 5px rgba(255, 255, 190, .75);
}
#general_events {
  height: 900px;
}

.favorites .search_box span.label, .searches_page .search_box span.label  {
  color: #00B6FF;
}

#general_events .results {
  position: relative;
  top: 50px;
  width: 600px;
  height: 650px;
  z-index:1;
  background-color: black;
  color: white;
  opacity: 0.95;
  margin: 0 auto;
  overflow: auto;
  -webkit-border-radius: 10px;
     -moz-border-radius: 10px;
       -o-border-radius: 10px;
          border-radius: 10px;
  -webkit-box-shadow: 0px 0px 15px 5px rgba(255, 255, 190, .75);
     -moz-box-shadow: 0px 0px 15px 5px rgba(255, 255, 190, .75);
          box-shadow: 0px 0px 15px 5px rgba(255, 255, 190, .75);
}

.search {
  height: 100px;
  margin: -20px auto;
  margin-bottom: -200px; /*This fixes airplane position*/
}

.search_box {
  z-index:1;
  width:600px;
  margin: 0px auto;
  position: relative;
  padding: 20px;
  opacity: 0.95;
  -webkit-border-radius: 5px;
     -moz-border-radius: 5px;
       -o-border-radius: 5px;
          border-radius: 5px;
          z-index: 1000;
 -webkit-transition: height 0.3s;
    -moz-transition: height 0.3s;
         transition: height 0.3s;
}

img.search_category_images {
  display: block;
  margin: 0 auto;
  width: 200px;
  height: 200px;
}

div.pam {
  z-index: 5;
  margin-right: 100px;
}

/* events descriptions */
p.description {
  width: 500px;
  max-height:200px;
  padding-left: 10px;
}

span.event {
  height:200px;
}

.event_images {
  display: block;
  margin: 0 auto;
}

.fb-send {
  margin-top: 25px;
  margin-left: 65px;
}

footer {
  padding: 10px;
}

footer p {
  margin: 0 0 0 0;
}

#dates {
  text-align: center;
}

#start {
  color: black;
}

#end {
  color: black;
}

#sportsDates {
  text-align: center;
}


/* Theater/concert searches */
#theaterDates {
  text-align: center;
}

input#concert_submit {
  color: black;
}

input#concert_submit:hover {
  color: #00B6FF;
}

input {
  -webkit-border-radius: 5px;
     -moz-border-radius: 5px;
       -o-border-radius: 5px;
          border-radius: 5px;
}

select {
  width: 150px;
  font-size: 1.1em;
}

input[type="submit"] {
-webkit-border-radius: 5px;
   -moz-border-radius: 5px;
     -o-border-radius: 5px;
        border-radius: 5px;
  background-color: navy;
  color: white;
}

input[type="submit"]:hover {
  color: yellow;
}

/* delete buttons for saved favorites page */
.favorites #main_div form input[type="submit"] {
  margin-left: -120px;
  background-color: navy;
}

.favorites #main_div form input[type="submit"]:hover {
  color: yellow;
}
