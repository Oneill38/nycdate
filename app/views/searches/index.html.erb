<div id="background_searches">
  <div class="users_container">
    <div id="main_div">
    <% if flash[:error] %>
      <%= flash[:error] %>
    <% end %>
    </div>
    <!-- Events API Search Info -->
    <div class="results">
      <div class="search_box">
       <h3> <% @results.each do |single_event| %> Events</h3>
        Title: <span class="event"><%= single_event[:title] %></span>
        <br>
        Link:
        <span class="event"><a href="<%= single_event[:url] %>">Link to Event</a></span>
        <br>
        Description:<span class="event"><%=sanitize single_event[:description], tags: %w(p) %></span>
        <br>
        Venue Address:
        <span class="event"><%= single_event[:venue_address] %></span>
        <br>
        City Name:
        <span class="event"><%= single_event[:city_name] %></span>
        <br>
        Region Name:
        <span class="event"><%= single_event[:region_name] %></span>
        <br>
        Date/Time:
        <span class="event"><%= single_event[:start_time] %></span>
        <br>
        <hr>
        <% end %>
      </div>
    </div>
    <div class="results">
      <div class="search_box">
      </div>
    </div>

  </div>
</div>



